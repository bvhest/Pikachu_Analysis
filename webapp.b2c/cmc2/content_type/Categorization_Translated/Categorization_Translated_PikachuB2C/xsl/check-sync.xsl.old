<xsl:stylesheet version="2.0" 
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:shell="http://apache.org/cocoon/shell/1.0">
  
  <xsl:param name="path"/>

  <xsl:template match="sync">
    <xsl:copy>
      <xsl:choose>
        <xsl:when test="depends/error">
          <xsl:apply-templates select="entry" mode="failed"/>
        </xsl:when>
        <xsl:otherwise>
          <xsl:apply-templates/>
          <!-- TODO delete files from holding area when sync successfull -->
          <xsl:for-each select="//entry">
            <shell:delete>
              <shell:source>
                <xsl:value-of select="concat($path, '/',@ct, '/',@l, '/',@o, '.xml')"/>
              </shell:source>
            </shell:delete>
          </xsl:for-each>
        </xsl:otherwise>
      </xsl:choose>
    </xsl:copy>
  </xsl:template>
  
  <xsl:template match="entry" mode="failed">
    <s:write xmlns:s="http://apache.org/cocoon/source/1.0">
      <s:source>
        <xsl:value-of select="concat($path, '/',@ct, '/',@l, '/',@o, '.xml')"/>
      </s:source>
      <s:fragment>
        <xsl:apply-templates select="."/>
      </s:fragment>
    </s:write>
  </xsl:template>

  <xsl:template match="@*|node()">
    <xsl:copy>
      <xsl:apply-templates select="@*|node()"/>
    </xsl:copy>
  </xsl:template>
 
</xsl:stylesheet>