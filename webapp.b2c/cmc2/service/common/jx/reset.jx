<sql:execute-query xmlns:sql="http://apache.org/cocoon/SQL/2.0">
<sql:query>
UPDATE octl SET LASTMODIFIED_TS = TO_DATE('01-JAN-00', 'DD-MON-RR')
where content_type = '${cocoon.parameters.ct}' 
  and localisation = '${cocoon.parameters.l}' 
  <jx:if test="${cocoon.parameters.o.length()>0}" xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
  and object_id = '${cocoon.parameters.o}'
  </jx:if>
</sql:query>
</sql:execute-query>