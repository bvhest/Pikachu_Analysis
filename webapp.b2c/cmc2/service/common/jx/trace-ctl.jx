<sql:execute-query xmlns:sql="http://apache.org/cocoon/SQL/2.0">
<sql:query>
select level, output_content_type, output_localisation, input_content_type, input_localisation
from ctl_relations
connect by 
	prior input_content_type = output_content_type and 
	prior input_localisation = output_localisation
start with 
	output_content_type = '${cocoon.parameters.ct}' and 
	output_localisation = '${cocoon.parameters.l}'
</sql:query>
</sql:execute-query>