<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <!-- =========================== Views =================================== -->
  <map:views>
    <map:view name="content" from-label="content">
      <map:serialize type="xml"/>
    </map:view>
    <map:view from-label="content" name="pretty-content">
      <map:transform src="xml2html.xslt"/>
      <map:serialize type="html"/>
    </map:view>
    <map:view name="links" from-position="last">
      <map:serialize type="links"/>
    </map:view>
  </map:views>
  <!-- ============================ Flows ================================== -->
  <map:flow language="javascript">
    <map:script src="cron.js"/>
  </map:flow>
  <!-- =========================== Pipelines ================================= -->
  <map:pipelines>
    <map:pipeline internal-only="false">
      <map:match pattern="*.view">
        <map:generate type="jx" src="{1}.xml">
          <map:parameter name="gui_url" value="{global:gui_url}"/>
		</map:generate>
        <map:transform src="complex-page2html.xsl">
          <map:parameter name="contextPath" value="{request:contextPath}"/>
        </map:transform>
        <map:serialize type="xml"/>
      </map:match>
    </map:pipeline>
	<!-- -->
    <map:pipeline>
      <map:match pattern="">
        <map:redirect-to uri="cron.xml"/>
      </map:match>
      <map:match pattern="cron.xml">
        <map:select type="request-parameter">
          <map:parameter name="parameter-name" value="doit"/>
          <map:when test="1">
            <map:call continuation="{request-param:continue}"/>
          </map:when>
          <map:otherwise>
            <map:call function="cron">
              <map:parameter name="realPath" value="{realpath:/}"/>
            </map:call>
          </map:otherwise>
        </map:select>
      </map:match>
	<!-- -->
      <map:match pattern="continue.*">
        <map:call continuation="{1}"/>
      </map:match>
    </map:pipeline>
	<!-- -->
  </map:pipelines>
</map:sitemap>
<!-- end of file -->
