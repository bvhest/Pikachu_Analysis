<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <map:components>
    <map:generators>
      <map:generator label="content" logger="sitemap.generator.hssf"
                     name="xls" pool-max="${hssf-generator.pool-max}"
                     src="org.apache.cocoon.generation.HSSFGenerator"/>
    </map:generators>
    <map:transformers default="xslt">
      <!--  -->
      <map:transformer logger="sitemap.transformer.xslt" name="xslt" pool-max="${xslt-transformer.pool-max}" src="org.apache.cocoon.transformation.TraxTransformer">
        <use-request-parameters>true</use-request-parameters>
        <use-session-parameters>false</use-session-parameters>
        <use-cookie-parameters>false</use-cookie-parameters>
        <xslt-processor-role>org.apache.excalibur.xml.xslt.XSLTProcessor/xalan</xslt-processor-role>
        <check-includes>true</check-includes>
      </map:transformer>
      <map:transformer logger="sitemap.transformer.xalan" name="xslt-saxon" pool-grow="2" pool-max="32" pool-min="8" src="org.apache.cocoon.transformation.TraxTransformer">
        <use-request-parameters>true</use-request-parameters>
        <use-session-parameters>false</use-session-parameters>
        <use-cookie-parameters>false</use-cookie-parameters>
        <use-browser-capabilities-db>false</use-browser-capabilities-db>
        <xslt-processor-role>org.apache.excalibur.xml.xslt.XSLTProcessor/saxon</xslt-processor-role>
        <check-includes>true</check-includes>
      </map:transformer>
    </map:transformers>
  </map:components>
  
  <map:pipelines>
    <map:pipeline type="noncaching">
      <map:match pattern="packaging_import_go.xml">
        <map:act type="copy-source" src="cocoon:/create_catalog_definition">
          <map:parameter name="dest" value="{cmc2:gdir}/PP_Configuration/temp/report_create_catalog_def_{request-param:project_code}.xml"/>
        </map:act>
        <map:act type="copy-source" src="cocoon:/do_import">
          <map:parameter name="dest" value="{cmc2:gdir}/PP_Configuration/temp/report_do_import_{request-param:project_code}.xml"/>
        </map:act>
        <map:act type="copy-source" src="cocoon:/move_upload_file">
          <map:parameter name="dest" value="{cmc2:gdir}/PP_Configuration/temp/report_move_upload_file_{request-param:project_code}.xml"/>
        </map:act>
        <map:generate src="{cmc2:gdir}/PP_Configuration/temp/report_do_import_{request-param:project_code}.xml"/>
        <map:serialize type="xhtml"/>
      </map:match>
      
      <map:match pattern="create_catalog_definition">
        <map:generate src="{cmc2:xmlDir}/empty.xml"/>
        <map:transform type="xslt-saxon" src="create_catalog_def.xslt">
          <map:parameter name="store_dir" value="{cmc2:gdir}/catalog_definition/inbox"/>
        </map:transform>
        <map:transform type="write-source"/>
        <map:serialize type="xml"/>
      </map:match>

      <map:match pattern="do_import">
        <map:generate src="{cmc2:gdir}/PP_Configuration/temp/upload/{request-param:project_file}.xml"/>
        <map:transform type="xslt-saxon" src="write_project_files.xslt">
          <map:parameter name="pconfig_inbox_dir" value="{cmc2:gdir}/PP_Configuration/inbox"/>
          <map:parameter name="ptext_inbox_dir" value="{cmc2:gdir}/PText_Raw/inbox"/>
        </map:transform>
        <map:transform type="write-source"/>
        <map:transform type="xslt-saxon" src="handle_results.xslt">
          <map:parameter name="upload_dir" value="{cmc2:gdir}/PP_Configuration/temp/upload"/>
          <map:parameter name="processed_dir" value="{cmc2:gdir}/PP_Configuration/processed"/>
        </map:transform>
        <map:transform type="shell"/>
        <map:transform type="xslt-saxon" src="result.xslt"/>
        <map:serialize type="xml"/>
      </map:match>
      
      <map:match pattern="move_upload_file">
        <map:generate src="{cmc2:xmlDir}/empty.xml"/>
        <map:transform type="xslt-saxon" src="move_upload_file.xslt">
          <map:parameter name="upload_dir" value="{cmc2:gdir}/PP_Configuration/temp/upload"/>
          <map:parameter name="processed_dir" value="{cmc2:gdir}/PP_Configuration/processed"/>
        </map:transform>
        <map:transform type="shell"/>
        <map:serialize type="xml"/>
      </map:match>
    </map:pipeline>
  </map:pipelines>
</map:sitemap>
<!-- end of file -->
