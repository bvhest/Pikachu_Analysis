<?xml version="1.0"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <!-- =========================== Components ================================ -->
  <map:components>
  </map:components>
  <!-- =========================== Resources =============================== -->
  <map:resources>
  </map:resources>
  <!-- =========================== Pipelines ================================= -->

  <map:pipelines>
    <!-- use case pipeline - URI request handling -->
    <map:pipeline>
      <!-- -->
      <map:match pattern="content_type_schedule.xml">
        <map:select type="request-parameter">
          <map:parameter name="parameter-name" value="param2"/>
          <map:when test="jobs">
            <map:generate src="{cmc2:xmlDir}/empty.xml"/>
            <map:transform type="xslt-saxon" src="sql_getscheduledetails.xsl">
              <map:parameter name="schedule_id" value="{request-param:param3}"/>
            </map:transform>
            <map:transform type="sql">
              <map:parameter name="use-connection" value="oracleDbCMC"/>
              <map:parameter name="clob-encoding" value="UTF-8"/>
            </map:transform>           
            <map:transform type="xslt-saxon" src="create_include_pipeline.xsl">         
              <map:parameter name="gui_url" value="{global:gui_url}"/>    
              <map:parameter name="pipe" value="{request-param:pipe}"/>    
              <map:parameter name="usefullpath" value="{request-param:usefullpath}"/>                  
            </map:transform>           
            <map:transform type="include"/>            
            <map:serialize type="xml"/>
          </map:when>                      
          <map:otherwise>
            <map:generate src="no_content_type.xml"/>
            <map:serialize type="xml"/>
          </map:otherwise>
        </map:select>
      </map:match>
      <!-- -->
    </map:pipeline>
  </map:pipelines>
  <!-- -->
</map:sitemap>
