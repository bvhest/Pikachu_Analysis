<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <map:components>
    <map:actions>
      <map:action logger="sitemap.action.clear-persistent-store" name="clear-transient-store" src="org.apache.cocoon.acting.ClearTransientStoreAction"/>
    </map:actions>
  </map:components>
  <!-- -->
  <map:pipelines>
    <map:pipeline>
      <map:match pattern="clear_cache.xml">
        <map:act type="clear-cache"/>
        <map:act type="clear-transient-store"/>
        <map:act type="clear-persistent-store"/>
        <map:redirect-to uri="{request:referrer}"/>
      </map:match>
    </map:pipeline>
    <!-- -->
  </map:pipelines>
  <!-- -->
</map:sitemap>
